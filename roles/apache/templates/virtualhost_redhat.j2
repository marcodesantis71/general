<VirtualHost *:80>
    ServerName {{item.name}}

    DocumentRoot {{item.docroot}}

    DirectoryIndex index.html index.htm index.php

    ErrorLog /var/log/httpd/{{item.name}}/error.log
    CustomLog /var/log/httpd/{{item.name}}/access.log combined

    LogFormat "%{X-Forwarded-For}i %a %l %u %t \"%r\" %>s %b \"%{Referer}i\" \"%{User-Agent}i\"" combined
    LogFormat "%a %l %u %t \"%r\" %>s %b" common

    <{{directory}} {{item.docroot}}/>
	Options -Indexes +FollowSymLinks
	AllowOverride {{allowoverride}}
	Require all granted
    </{{directory}}>

</VirtualHost>
